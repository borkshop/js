{
  "name": "jspit",
  "version": "0.1.0",
  "description": "JS Pit",
  "author": "Joshua T Corbin <jcorbin@wunjo.org>",
  "license": "BSD-3-Clause",
  "main": "index.html",
  "type": "module",

  "repository": {
    "type": "git",
    "url": "https://github.com/borkshop/js.git",
    "directory": "jspit"
  },

  "private": true,
  "scripts": {
    "lint": "tsc",
    "test": "npm run lint",
    "start": "snowpack dev",
    "build": "snowpack build --clean"
  },
  "dependencies": {},

  "devDependencies": {
    "@snowpack/plugin-optimize": "^0.2.4",
    "@snowpack/plugin-typescript": "^1.0.1",
    "@types/resize-observer-browser": "^0.1.4",
    "@types/snowpack-env": "^2.3.0",
    "snowpack": "^2.14.0",
    "typescript": "^4.0.3"
  },

  "snowpack": {
    "plugins": [
      "@snowpack/plugin-typescript"
    ],
    "exclude": [
      "**/build/**/*",
      "**/node_modules/**/*",
      "**/__tests__/*",
      "**/*.@(spec|test).@(js|mjs)",
      "tsconfig.json",
      "jsconfig.json",
      "package.json",
      "snowpack.config.json"
    ],
    "mount": {
      "../cdom": "/cdom",
      ".": "/"
    },
    "alias": {
      "cdom": "./cdom"
    }
  }
}
